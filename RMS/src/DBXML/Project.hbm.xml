<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
  
 <hibernate-mapping>  
  <class name="model.ProjectModel" table="Technology">  
    <id name="id" type="java.lang.Long" column="ID" >
     <generator class="identity"/>
    </id>  
            
    <property name="name" type="string" column="Name" />  
    <property name="numOfInvolvedHumans" type="int" column="NumOfInvolvedHumans" />  
    <property name="numOfModules" type="int" column="NumOfModules" />  
     
    <one-to-one name="developementProcess" class="model.ProcessModel"
			cascade="save-update"></one-to-one>
	
	<one-to-one name="maintanaceProcess" class="model.ProcessModel"
			cascade="save-update"></one-to-one>

  </class>  
            
 </hibernate-mapping>  