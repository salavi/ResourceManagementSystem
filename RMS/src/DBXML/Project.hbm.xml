<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
  
 <hibernate-mapping>  
  <class name="model.ProjectModel" table="Technology">  
    <id name="id" type="java.lang.Long" column="ID" >
     <generator class="identity"/>
    </id>  
            
    <property name="name" type="string" column="Name" />  
    <property name="numOfInvolvedHumans" type="int" column="NumOfInvolvedHumans" />  
    <property name="numOfModules" type="int" column="NumOfModules" />  
     
    <many-to-one name="developementProcess" class="model.ProcessModel"
    	column="DevProcID" unique="true" 
		cascade="save-update"></many-to-one>
	
	<many-to-one name="maintanaceProcess" class="model.ProcessModel"
		column="MainProcID" unique="true" 
		cascade="save-update"></many-to-one>
	
	<set name="listOfTechnologies" cascade="all">  
          <key column="pid"></key>  
          <index column="type"></index>  
          <one-to-many class="model.project.TechnologyModel"/>  
    </set>  

  </class>  
            
 </hibernate-mapping>  