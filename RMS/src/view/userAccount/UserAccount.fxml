<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.userAccount.UserAccountController">
   <children>
      <Pane prefHeight="550.0" prefWidth="900.0">
         <children>
            <TabPane prefHeight="550.0" prefWidth="900.0" side="RIGHT" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                  <Tab fx:id="profileTab" text="مشخصات">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     		<fx:include source="Profile.fxml" />
                     	</AnchorPane>
                     </content>
                  </Tab>
                  <Tab fx:id="editTab" text="ویرایش ">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        	<fx:include source="EditProfile.fxml" /> 
                        </AnchorPane>
                     </content>
                  </Tab>
                <Tab fx:id="passwordTab" text="تغییر رمز عبور">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <fx:include source="ChangePassword.fxml" /> 
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab fx:id="accessLevelTab" text="تغییر سطح دسترسی">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <fx:include source="ChangeAccessLevel.fxml" /> 
                        </AnchorPane>
                  </content>
                </Tab>
                  <Tab fx:id="deleteAccountTab" text="حذف حساب کاربری ">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <fx:include source="RemoveAccount.fxml" /> 
                        </AnchorPane>
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
         </children>
      </Pane>
   </children>
</AnchorPane>
